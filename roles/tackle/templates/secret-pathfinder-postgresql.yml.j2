kind: Secret
apiVersion: v1
metadata:
  labels:
    app.kubernetes.io/name: {{ pathfinder_database_service_name }}
    app.kubernetes.io/component: {{ pathfinder_database_component_name }}
    app.kubernetes.io/part-of: {{ app_name }}
  name: {{ pathfinder_database_secret_name }}
  namespace: {{ app_namespace }}
type: Opaque
data:
  database-name: {{ pathfinder_database_db_name_b64 }}
  database-user: {{ pathfinder_database_db_username_b64 }}
  database-password: {{ pathfinder_database_db_password_b64 }}
